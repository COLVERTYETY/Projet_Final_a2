<UserControl x:Class="Projet_Final_a2_wpf.MiroirControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet_Final_a2_wpf"
             mc:Ignorable="d">
    <Grid Background="AliceBlue">
        <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
            <Label Content="Symétrie" Margin="2,5"/>
            <CheckBox Content="Vertical" Name="VerticalCheck" Margin="2,5" Click="Vertical_Click" IsChecked="True"/>
            <CheckBox Content="Horizontal" Name="HorizontalCheck" Margin="2,5" Click="Horizontal_Click"/>
            <Button Content="Valider" Margin="2,5"/>
            <Image MinHeight="200" MinWidth="200" Margin="5" Name="preview"/>  
        </StackPanel>
    </Grid>
</UserControl>
